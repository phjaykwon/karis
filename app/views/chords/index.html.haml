.header.header-white
	.header-list
		%li#name
			= link_to 'Karis', '/'
		%li
			= link_to 'Top Chords', '/'
		%li
			= link_to 'Favorites', '/'
		%li
			= link_to 'Sign In', '/'

.title_big.section_medium-top-padding
	You have searched for "#{@search}"

.section_results
	- @chords.each do |chord|
		.search_item
			= link_to chord.title, chord_path(:id => chord.id)

.footer.footer-white
	.footer-container
		.footer-logo

		%ul.footer-list
			%li.footer-list-item
				= link_to 'About', '/about'
			%li.footer-list-item
				= link_to 'Blog', '/blog'
			%li.footer-list-item
				= link_to 'Submit', '/chords/new'
